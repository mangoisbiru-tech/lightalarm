<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <color name="accent_color">#FF2196F3</color>
    <color name="background_color">#FFF5F5F5</color>
    <color name="black">#FF000000</color>
    <color name="primary_text">#FF212121</color>
    <color name="secondary_text">#FF757575</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">Light Alarm Native</string>
    <style name="Theme.LightAlarmNative" parent="Theme.Material3.DayNight">
        
        <item name="colorPrimary">@color/accent_color</item>
        <item name="colorPrimaryVariant">@color/accent_color</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <item name="colorSecondary">@color/accent_color</item>
        <item name="colorSecondaryVariant">@color/accent_color</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <item name="android:statusBarColor" ns1:targetApi="l">?attr/colorPrimaryVariant</item>
        
    </style>
    <style name="Theme.LightAlarmNative.Fullscreen" parent="Theme.LightAlarmNative">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>
</resources>